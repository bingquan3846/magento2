<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="top.links">
            <block class="Magento\Customer\Block\Account\Link" name="my-account-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Newsletter</argument>
                </arguments>
            </block>
            <block class="Magento\Customer\Block\Account\RegisterLink" name="register-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Anmelden</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="wish-list-link" remove="true"></referenceBlock>
        <referenceBlock name="authorization-link" remove="true"></referenceBlock>
    </body>
</page>